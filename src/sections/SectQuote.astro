---
import { Code } from "astro:components";
import Quote from "../components/Quote.astro";
import bg1 from "../assets/img/mars-main-page/Vector 15.png";
import bg2 from "../assets/img/mars-main-page/Vector 16.png";
import bg3 from "../assets/img/mars-main-page/Vector 17.png";

const quotes = [
    {
        id: 1,
        text: "Жизнь показывает, что и космос будут осваивать не какие-нибудь супермены, а самые простые люди.",
        author: "Юрий Гагарин",
    },
    {
        id: 2,
        text: "That's one small step for a man, one giant leap for mankind.",
        author: "Neil Armstrong ",
    },
];
---

<section
    style={`background-image:url("${bg2.src}"),url("${bg1.src}"),url("${bg3.src}")`}
>
    <div class="container container_small">
        <h2>Подробнее про пилотируемые полеты на марс</h2>
        <p class="sub-title"><a href="">Нажми тут</a></p>
        <div class="quotes">
            {quotes.map((quote) => <Quote {...quote} />)}
        </div>
    </div>
</section>

<style>
    section {
        padding-block: 185px;
        background-repeat: no-repeat;
        background-position:
            center 105%,
            center 80%,
            center 60%;
        background-size: 100% auto;
    }
    h2 {
        font-size: 30px;
        font-weight: 500;
        text-align: center;
        line-height: 1;
    }
    .sub-title {
        font-size: 60px;
        font-weight: 500;
        text-align: center;
        margin-top: 50px;
        line-height: 1;
    }
    .quotes {
        margin-top: 100px;
    }
</style>
